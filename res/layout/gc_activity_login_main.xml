<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#33CCFF"
    android:orientation="vertical"
    >
	<ImageView
	    android:id="@+id/imageview_xiaofanzhuo_picture"
	    android:layout_width="250dp"
	    android:layout_height="250dp"
	    android:src="@drawable/gc_register_login_title"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="20dip"
	    />    
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <EditText
            android:id="@+id/edittext_user"
            android:layout_width="250dip"
            android:layout_height="40dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip"
            android:hint="输入用户名/手机号码" 
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:layout_margin="2dip"
            />
        <EditText
            android:id="@+id/edittext_secretcode"
            android:layout_width="250dip"
            android:layout_height="40dip"
            android:layout_below="@id/edittext_user"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip"
            android:hint="密码"
            android:password="true"
            android:scrollHorizontally="true" 
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:layout_margin="2dip"
            />
        <Button
            android:id="@+id/button_login"
            android:text="登录"
            android:layout_width="250dip"
            android:layout_height="40dip"
            android:textColor="#000000"
            android:layout_below="@id/edittext_secretcode"
            android:gravity="center"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip"
            android:layout_centerHorizontal="true"
            android:background="#77DDFF"
            
            />
        <CheckBox
            android:id="@+id/checkbox_secretcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_login"
            android:layout_alignLeft="@id/button_login"
            android:text="记住密码"
   		  android:background="#33CCFF"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dip" 
            />
        <Button
            android:id="@+id/button_regeist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/button_login"
            android:layout_below="@id/button_login"
            android:text="注册新账号"
            android:textColor="#FFFFFF"
            android:layout_marginTop="2dip"
			/>
     
    </RelativeLayout>	
</LinearLayout>